{
  "name": "hal",
  "version": "1.0.0",
  "description": "",
  "main": "hal-server.js",
  "scripts": {
    "build:babel": "babel src --out-dir .dist",
    "build:browserify": "browserify --node .dist/hal-server.js -o dist/hal-server-bundle.js",
    "build:terser": "terser dist/hal-server-bundle.js -o dist/hal-server-bundle.min.js",
    "build": "npm-run-all clean lint build:babel build:browserify build:terser",
    "dev": "nodemon --watch src --exec eslint src",
    "lint": "eslint src",
    "clean": "rimraf .dist dist",
    "serve": "npm run build",
    "start": "node dist/hal-server-bundle.min.js"
  },
  "author": "David Vandensteen <dvandensteen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "babel-eslint": "^10.1.0",
    "browserify": "^17.0.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "terser": "^5.6.1"
  },
  "dependencies": {
    "p-series": "^2.1.0",
    "p-wait-for": "^3.2.0",
    "path-exists": "^4.0.0"
  }
}
